@{
    ViewData["Title"] = "Excercise 4: University Data";
    Layout = "_LayoutAdmin";
    <link rel="stylesheet" href="~/css/API.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.1.0/css/buttons.dataTables.min.css" />
}

<div class="card">
    <div class="card-body">
        <div class="container-fluid">
            <h1 class="text-xl-center">University Data</h1>
            <button class="btn btn-primary btn-add" data-toggle="modal" data-target="#insertModal"><i class="fas fa-plus"></i><i> </i>Add Data</button>
            <table class="table" id="uniTable">
                <thead class="text-center">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">University Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade" id="insertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content modal">
            <div class="modal-header border-dark bg-dark">
                <h5 class="modal-title text-light" id="exampleModalLabel">Add Data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-dark" id="insertModalBody">
                <form class="needs-validation" id="universityForm" onsubmit="return false">
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col">
                                <label for="universityId">ID</label>
                                <input type="text" class="form-control" id="universityId" placeholder="University ID" required>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                            <div class="col">
                                <label for="uniName">University Name</label>
                                <input type="text" class="form-control" id="uniName" placeholder="University name" required>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                        </div>
                    </div>
                    <div style="text-align:right">
                        <button type="submit" class="btn btn-primary" id="btn-insert" onclick="insertUni()">Submit</button>
                        <button class="btn btn-primary" id="btn-update" onclick="updateUni()">Update</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/university.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.0/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.print.min.js"></script>
}
